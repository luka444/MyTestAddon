<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="test_model_view_list" model="ir.ui.view">
        <field name="name">test.model.view.tree</field>
        <field name="model">test.model</field>
        <field name="arch" type="xml">
            <list>
                <header>
                    <button string="Change Users" name="open_change_users_wizard" type="object" class="oe_highlight"/>
                </header>
                <field name="name"/>
                <field name="user_id"/>
            </list>
        </field>
    </record>

    <record id="test_model_view_search" model="ir.ui.view">
        <field name="name">test.model.view.search</field>
        <field name="model">test.model</field>
        <field name="arch" type="xml">
            <search>
                <field name="is_admin_user" invisible="1"/>
                <filter name="is_admin_filter" string="Admin User" domain="[('is_admin_user', '=', True)]"/>
            </search>
        </field>
    </record>

    <record id="test_model_view_form" model="ir.ui.view">
        <field name="name">test.model.view.form</field>
        <field name="model">test.model</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Enter a title"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="is_manager" invisible="1" />
                           <field name="user_id" widget="many2one_avatar_user"/>
                           <field name="story_point" invisible="not is_manager"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Description">
                            <field name="description"/>
                        </page>
                        <page name="holidays" string="Holidays">
                            <field name="leave_ids" context="{'default_employee_id': employee_id}"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter reload_on_post="True"/>
            </form>
        </field>
    </record>

    <record id="test_model_action" model="ir.actions.act_window">
        <field name="name">Test Model</field>
        <field name="res_model">test.model</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>

<odoo>

    <record id="view_import_test_wizard_form" model="ir.ui.view">
        <field name="name">import.test.wizard.form</field>
        <field name="model">import.test.wizard</field>
        <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <group>
                        <field name="file" filename="file_name"/>
                        <field name="file_name"/>
                    </group>
                </group>
            </sheet>
            <footer>
                <button name="action_import" type="object" string="Import" class="btn-primary"/>
                <button string="Cancel" class="btn-secondary" special="cancel"/>
            </footer>
        </form>
        </field>
    </record>

    <record id="import_test_wizard_action" model="ir.actions.act_window">
        <field name="name">Import Test</field>
        <field name="res_model">import.test.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
